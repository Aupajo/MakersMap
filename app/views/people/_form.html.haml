= simple_form_for(@person, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input 'email'

  = f.simple_fields_for :data do |d|
    .form-inputs
      = d.input 'name', as: :string, required: false, input_html: { value: @person.safe_data.name }
      = d.input 'address', as: :text, required: false, input_html: { value: @person.safe_data.address }

  = render partial: "tags/association.html", locals: { f: f }

  .form-actions
    = f.button :submit
