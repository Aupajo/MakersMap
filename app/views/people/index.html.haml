%h1 People
.row
  .col-md-8
    - @people.each do |person|
      = render partial: 'search/result', locals: { result: person }
      - if current_user
        = link_to 'Show', person
        = link_to 'Edit', edit_person_path(person)
        = link_to 'Destroy', person, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Suggest New Person', new_person_path
