.row
  .col-md-8
    %h2 Results
    .media
      - @results.each do |result|
        .panel.panel-default
          .panel-body
            .media-left.media-middle
              = link_to result do
                %img.media-object{ src: "http://placeholdit.imgix.net/~text?txtsize=33&txt=P&w=60&h=60" }
            .media-body
              %h4.media-heading
                = link_to result do
                  = result.name
              = result.try(:description)

  .col-md-4
    %h4 Tags
    - @tags.each do |tag|
      = link_to tag, class: "btn btn-default" do
        %span.glyphicon.glyphicon-tag
        = tag.name
